<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xiaozhu.helloworld.GetUserInfoActivity"
    >


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_show_user_info"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent = "true"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:text="用户信息"
            android:textColor="@android:color/white"/>
    </android.support.v7.widget.Toolbar>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picture"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="70dp"
           />

        <ImageView
            android:id="@+id/take_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/picture"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="67dp"
            android:layout_marginRight="67dp"
            android:src="@drawable/ic_photo_camera_24px" />


        <ImageView
            android:id="@+id/show_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="230dp"
            android:src="@drawable/ic_show_info_name"
            />

        <ImageView
            android:id="@+id/show_info_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_show_info_num"
            android:layout_alignLeft="@id/show_info_name"
            android:layout_marginTop="290dp"
            />

        <ImageView
            android:id="@+id/show_info_departement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_show_info_departement"
            android:layout_alignLeft="@id/show_info_name"
            android:layout_marginTop="350dp" />

        <ImageView
            android:id="@+id/show_info_authority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_show_info_authority"
            android:layout_marginTop="410dp"
            android:layout_alignLeft="@id/show_info_num" />

        <ImageView
            android:id="@+id/show_info_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_show_info_mail"
            android:layout_alignLeft="@id/show_info_name"
            android:layout_marginTop="470dp" />

        <ImageView
            android:id="@+id/show_info_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_show_info_phone"
            android:layout_alignLeft="@id/show_info_name"
            android:layout_marginTop="530dp"/>
        
        <EditText
            android:id="@+id/edit_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="名字"
            android:textColorHint="@android:color/darker_gray"
            android:paddingLeft="10dp"
            android:maxLines="1"
            android:layout_toRightOf="@id/show_info_name"
            android:layout_marginTop="235dp"/>
        <EditText
            android:id="@+id/edit_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:hint="员工ID"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:maxLines="1"
            android:layout_toRightOf="@id/show_info_name"
            android:layout_marginTop="295dp"/>
        <EditText
            android:id="@+id/edit_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:hint="部门"
            android:paddingLeft="10dp"
            android:maxLines="1"
            android:layout_toRightOf="@id/show_info_name"
            android:layout_marginTop="355dp"/>
        <EditText
            android:id="@+id/edit_text_authrity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:hint="权限"
            android:paddingLeft="10dp"
            android:maxLines="1"
            android:layout_toRightOf="@id/show_info_name"
            android:layout_marginTop="415dp"/>
        <EditText
            android:id="@+id/edit_text_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:hint="邮箱"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:maxLines="1"
            android:layout_toRightOf="@id/show_info_name"
            android:layout_marginTop="475dp"/>
        <EditText
            android:id="@+id/edit_text_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:hint="电话"
            android:inputType="text|number"
            android:paddingLeft="10dp"
            android:maxLines="1"
            android:layout_toRightOf="@id/show_info_name"
            android:layout_marginTop="535dp"/>
        <android.support.design.widget.FloatingActionButton
            android:id ="@+id/fab_save"
            android:layout_width ="wrap_content"
            android:layout_height ="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:maxLines="1"
            android:src ="@drawable/ic_show_info_save"
            />


    </RelativeLayout>




</LinearLayout>
